<div class="container">
    <div class="row">

        <h4>@ItemName Not Selected</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Item</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in NotSelected)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>
                            <button class="btn btn-success" type="button" @onclick="(()=>Select(item))">Select</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <h4>@ItemName Selected</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Item</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Selected)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>
                            <button class="btn btn-danger" type="button" @onclick="(()=>Deselect(item))">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>