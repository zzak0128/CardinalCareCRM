<div class="container">
    <div class="row">
        <h4>Select @ItemName</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Item</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Items)
                {
                    if (item.GetId() == SelectedItem.GetId())
                    {
                        <tr class="table-success">
                            <td>@item.Title</td>
                            <td>
                                <button class="btn btn-success" type="button" @onclick="() => Select(item)">Select</button>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>
                                <button class="btn btn-success" type="button" @onclick="() => Select(item)">Select</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>