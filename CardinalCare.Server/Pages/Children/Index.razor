@page "/Children"

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th><button class="btn btn-primary" @onclick="NavigateToCreate">Register New</button></th>
        </tr>
        <tr>
            <th>Child Name</th>
            <th>Birthday</th>
            <th>Diet Restrictions</th>
            <th>Allergies</th>
            <th>Parent/Guardian</th>
        </tr>
    </thead>
    <tbody>
        @if (Children.Any())
        {
            @foreach (var child in Children)
            {
                <tr>
                    <td>@child.FirstName @child.LastName</td>
                    <td>@child.Birthday</td>
                    @if (child.DietRestrictions != string.Empty)
                    {
                        <td>Diet restrictions exits. View record for details."</td>
                    }
                    else
                    {
                        <td> No restrictions on file.</td>
                    }
                    @if (child.Allergies != string.Empty)
                    {
                        <td>Allergies on file. View record for details."</td>
                    }
                    else
                    {
                        <td> No allergies on file.</td>
                    }
                    @foreach (var guardian in child.Guardians)
                    {
                        <td>@guardian.FirstName @guardian.LastName</td>
                        <td>@guardian.PhoneNumber</td>
                    }

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5"><h3>No children are currently registered</h3></td>
            </tr>
        }

    </tbody>
</table>