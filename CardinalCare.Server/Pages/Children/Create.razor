@page "/children/add-new"

<h3>Add new child</h3>

<EditForm Model="@NewChild" OnValidSubmit="@SaveChild">
    <div class="input-group">
        <label for="id">#</label>
        <InputNumber id="id" @bind-Value="@NewChild.ChildId" disabled />
    </div>

    <div class="input-group">
        <label for="first-name">First Name</label>
        <InputText id="first-Name" @bind-Value="@NewChild.FirstName" />
    </div>

    <div class="input-group">
        <label for="mid-name">Middle Name</label>
        <InputText id="mid-Name" @bind-Value="@NewChild.MidName" />

    </div>


    <div class="input-group">
        <label for="last-name">Last Name</label>
        <InputText id="last-Name" @bind-Value="@NewChild.LastName" />
    </div>

    <div class="input-group">
        <label for="b-day">Birthday</label>
        <InputDate id="b-day" @bind-Value="@NewChild.Birthday" />

    </div>


    <div class="input-group">
        <label for="diet">Diet Restrictions</label>
        <InputTextArea id="diet" @bind-Value="@NewChild.DietRestrictions" />

    </div>


    <div class="input-group">
        <label for="allergies">Allergies</label>
        <InputTextArea id="allergies" @bind-Value="@NewChild.Allergies" />

    </div>

    <div class="input-group">
        <label for="vac-file">Upload proof of Vaccination</label>
        <div class="input-group mb-3">
            <input type="file" class="form-control" id="vac-file">
            <label class="input-group-text" for="vac-file">Upload</label>
        </div>
    </div>

    <div class="input-group">
        <label for="address">Address</label>
        <InputSelect id="address" @bind-Value="@NewChild.Address">
            @foreach (var address in Addresses)
            {
                <option>@address.Street1</option>
            }
        </InputSelect>
        <button type="button" onclick="NavigateToNewAddress">New Address</button>
    </div>

    @*TODO: Update this to use my select group comonent form Amazon Return Orders*@
    <div class="input-group">
        <label for="guardian">Parent/Guardian</label>
        <InputSelect id="guardian" @bind-Value="@NewChild.Guardians" />
    </div>

    <div class="input-group">
        <button class="btn btn-primary" type="submit">Create</button>
        <button class="btn btn-secondary" type="button" onclick="NavigateBack">Back</button>
    </div>

</EditForm>
